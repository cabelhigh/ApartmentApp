<p id="notice"><%= notice %></p>

<h1>Listing Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street Address</th>
      <th>City, State, Zip</th>
      <th>Phone Number</th>
      <th>Hours of Operation</th>
      <th colspan="3">Show | Edit | Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.name %></td>
        <td><%= apartment.street_address %></td>
        <td><%= apartment.city %>, <%=apartment.state%> <%=apartment.postal%></td>
        <td><%= apartment.phone_number %></td>
        <td><%= apartment.opens_at %> - <%= apartment.closes_at %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apartment', new_apartment_path %>

